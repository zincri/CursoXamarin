<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoXamarin.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator} }"
    BackgroundImage="android.jpg"
    Title="Login">

    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Login}">
            <StackLayout
            Padding="5">
                <!-- Place new controls here -->
                <Label Text="Inicia SesiÃ³n"
                   HorizontalOptions="CenterAndExpand" 
                   VerticalOptions="CenterAndExpand" 
                   Font="Bold"
                   FontSize="Large"
                   TextColor="White"
                   Margin="0,10"
                   />
                <Image 
                    Source="sp.png"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    HeightRequest="100"
                    WidthRequest="300"/>
                <StackLayout
                    VerticalOptions="CenterAndExpand"
                    Orientation="Vertical"
                    Padding="30"
                    Margin="0,0,0,0">
                    <Frame
                        
                        Margin="0,10,0,0"
                        HasShadow="true"
                        OutlineColor="Navy"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        CornerRadius="30"
                        Padding="10,0">

                        <Entry 
                            Text="{Binding Usuario, Mode=TwoWay}"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="60"
                            HorizontalTextAlignment="Center"
                            Placeholder="usuario"
                            PlaceholderColor="White"
                            BackgroundColor="Transparent"
                            VerticalOptions="Center"></Entry>
                    </Frame>
                    <Frame
                        Margin="0,10,0,0"
                        HasShadow="true"
                        OutlineColor="Gray"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        CornerRadius="30"
                        Padding="10,0">

                        <Entry 
                            Text="{Binding Password, Mode=TwoWay}"
                            IsPassword="True"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="60"
                            HorizontalTextAlignment="Center"
                            Placeholder="usuario"
                            PlaceholderColor="White"
                            BackgroundColor="Transparent"
                            VerticalOptions="Center"
                            Opacity="0.2"
                        ></Entry>
                    </Frame>

                </StackLayout>
                <StackLayout
                Padding="30,0"
                Margin="0,0,0,0"
                Orientation="Vertical"
                VerticalOptions="CenterAndExpand"
                >
                    <Button
                    IsEnabled="{Binding Isenable, Mode=TwoWay}"
                    Text="Login"
                   HeightRequest="60"
                    HorizontalOptions="FillAndExpand"
                    BorderRadius="30"
                    TextColor="White"
                    Command="{Binding LoginCommand}"
                    />


                    <Button
                   
                    Text="Register"
                   HeightRequest="60"
                    HorizontalOptions="FillAndExpand"
                    BorderRadius="30"
                    TextColor="White"
                    />



                </StackLayout>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>